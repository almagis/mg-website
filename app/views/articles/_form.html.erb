<!-- Form partial for article -->


<!-- Initialises tinyMCE -->
<%= tinymce %>
<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <!-- various form fields for article info -->
  <div class="field">
    <%= f.file_field :article_img, label: "Add Image" %>
  </div>
  
  <div>
    <%= label_tag "Select Category:" %><br />
    <%= select_tag(:category_id, options_for_select(@categories, Category.find(1))) %>
  </div>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  
  <div class="field">
    <%= f.label :summary %><br>
    <%= f.text_area :summary, :rows => 3, :cols => 60, class: "mceNoEditor" %>
  </div>
  
  <!-- tinyMCE element - rich text editor -->
  <div>
    <%= f.label :content %><br>
    <%= f.text_area :content, :class => "tinymce", :rows => 20, :cols => 120 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
