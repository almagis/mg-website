<%= tinymce_assets %>
<%= tinymce %>

<h1>Edit Article</h1>

<%= simple_form_for @article, :html => { :multipart => true } do |f| %>

  <div class="field">
    <%= f.file_field :article_img, label: "Add Image" %>
  </div>

  <%= f.select :category_id, @categories, label: "Select Category" %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  
  <div class="field">
    <%= f.label :summary %><br>
    <%= f.text_area :summary, :rows => 3, :cols => 60, class: "mceNoEditor"%>
  </div>
  
  <div>
    <%= f.label :content %><br>
    <%= f.text_area :content, :class => "tinymce", :rows => 20, :cols => 120 %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>



<%= link_to 'Show', @article %> |
<%= link_to 'Back', articles_path %>
