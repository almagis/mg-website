<!-- tinyMCE initialisation for rich text editing -->
<%= tinymce_assets %>
<%= tinymce %>

<h1>Edit Article</h1>

<!-- Form fields for article info -->
<!-- This page doesn't render the form partial due to issues with the category dropdown -->
<%= simple_form_for @article, :html => { :multipart => true } do |f| %>

  <div class="field">
    <%= f.file_field :article_img, label: "Add Image" %>
  </div>

  <%= f.select :category_id, @categories, label: "Select Category" %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  
  <!-- tinyMCE editor -->
  <div class="field">
    <%= f.label :summary %><br>
    <%= f.text_area :summary, :rows => 3, :cols => 60, class: "mceNoEditor"%>
  </div>
  
  <div>
    <%= f.label :content %><br>
    <%= f.text_area :content, :class => "tinymce", :rows => 20, :cols => 120 %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>


<!-- Links to show and 'back' -->
<%= link_to '<p class="article-back-btn"> Show Article </p>'.html_safe, @article %> <br>
<%= link_to '<p class="article-back-btn"> <i class= "fa fa-arrow-left"></i> Back </p>'.html_safe, :back %>
