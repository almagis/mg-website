<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <% if user_signed_in? %>
      <%= link_to 'New Article', new_article_path, class:"btn btn-primary btn-block" %>
    <% end %>
    <br />
    <%= render @articles %>
  </div>
</div>

<div class="text-center">
  <%= will_paginate @articles, renderer: BootstrapPagination::Rails %>
</div>

